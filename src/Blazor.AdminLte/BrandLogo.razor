@namespace Blazor.AdminLte
<!-- Brand Logo -->
<a href="@Link" class="brand-link">
    @if (!string.IsNullOrWhiteSpace(Logo))
    {
        <img src="@Logo" alt="Logo" class="brand-image @imageEffect @elevation">
        <span class="brand-text font-weight-light">@ChildContent</span>
    }
    else {
        <span style="margin-left: 56px" class="brand-text font-weight-light">@ChildContent</span>
    }
</a>
@code {
    [Parameter]
    public string Link { get; set; } = "#";
    [Parameter]
    public string Logo { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public Elevation Elevation { get; set; }
    [Parameter]
    public ImageEffect ImageEffect { get; set; }

    private string elevation => Elevation.GetDescription<StyleAttribute>();
    private string imageEffect => ImageEffect.GetDescription<StyleAttribute>();
}
