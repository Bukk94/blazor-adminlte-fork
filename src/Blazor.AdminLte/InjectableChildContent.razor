@Content

@code {
    [Parameter]
    public RenderFragment Content { get; set; }

    public bool OverrideParentContent { get; set; }

    [Parameter]
    public Action OnContentSet { get; set; }

    public void ResetContent()
    {
        Content = null;
        OverrideParentContent = false;
        OnContentSet?.Invoke();
    }
    
    public string SetContent(RenderFragment ctx, bool overrideParentContent = false)
    {
        if (ctx == null)
        {
            Content = null;
        }
        else
        {
            Content = (RenderFragment)ctx.Clone();
        }

        OverrideParentContent = overrideParentContent;
        OnContentSet?.Invoke();
            
        return null;
    }
}